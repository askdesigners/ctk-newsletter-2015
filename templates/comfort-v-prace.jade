extends articlelayout

block append vars
  - bodyclass = 'article-detail ' + page.metadata.indexClass

block content
    header.articleHeader
        h1= page.title

    article.article
        .col.col-2
            h3.articleSubhead= page.metadata.introPart1 
            :verbatim <iframe width="100%" height="250px" src="https://www.youtube.com/embed/FLZBAVlxI6Q" frameborder="0" allowfullscreen></iframe>

        .col.col-2.txtCol-2-2
            div!= typogr(page.html).typogrify()
        
            div.clearFix
                a(href="http://nib.ctk.cz/cs/Contract/Product?Prod=help") Více o nové Infobance, nápověda a videa jsou zde
