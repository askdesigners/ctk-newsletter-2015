extends articlelayout

block append vars
  - bodyclass = 'article-detail ' + page.metadata.indexClass

block content
    .col.col-2.imageCol
        img(src="img/director-tall.jpg")

    .col.col-2.textCol
        header.articleHeader
            h1= page.metadata.introPart1
            h3= page.metadata.introPart2

        article.article
            section.content!= typogr(page.html).typogrify()

    .clearfix